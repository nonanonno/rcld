{
    "name": "rcld",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "args": {
            "ROS_DISTRO": "galactic",
            "DC": "ldc-1.29.0"
        }
    },
    "remoteUser": "vscode",
    "userEnvProbe": "interactiveShell",
    "features": {
        "git": "latest",
        "common": "latest",
        "docker-from-docker": {
            "version": "latest",
            "moby": true,
            "dockerDashComposeVersion": "v1"
        }
    },
    "extensions": [
        "webfreak.code-d",
        "pflannery.vscode-versionlens",
        "vadimcn.vscode-lldb",
        "editorconfig.editorconfig"
    ],
    "postCreateCommand": "bash .devcontainer/postCreateCommand.sh",
}
